				<font kerning="yes" embed-url="AzoSans-Light.ttf" simulate-style="true">
					<font-triplet name="AzoSans-Light" style="normal" weight="bold"/>
				</font>
				<font kerning="yes" embed-url="AzoSans-LightItalic.ttf">
					<font-triplet name="AzoSans-Light" style="italic" weight="normal"/>
