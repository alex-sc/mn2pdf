				<font kerning="yes" embed-url="AzoSans-LightItalic.ttf" simulate-style="true">
					<font-triplet name="AzoSans-Light" style="italic" weight="bold"/>
				</font>
				
				<!-- SourceSansPro-Light font -->
				<font kerning="yes" embed-url="SourceSansPro-Light.ttf">
						<font-triplet name="SourceSansPro-Light" style="normal" weight="normal"/>
					</font>
				<font kerning="yes" embed-url="SourceSansPro-Regular.ttf">
					<font-triplet name="SourceSansPro-Light" style="normal" weight="bold"/>
				</font>
				<font kerning="yes" embed-url="SourceSansPro-LightIt.ttf">
					<font-triplet name="SourceSansPro-Light" style="italic" weight="normal"/>
				</font>
				<font kerning="yes" embed-url="SourceSansPro-It.ttf">
					<font-triplet name="SourceSansPro-Light" style="italic" weight="bold"/>
				</font>
				<!-- SourceSansPro font -->
				<font kerning="yes" embed-url="SourceSansPro-Regular.ttf">
						<font-triplet name="SourceSansPro" style="normal" weight="normal"/>
					</font>
				<font kerning="yes" embed-url="SourceSansPro-Bold.ttf">
					<font-triplet name="SourceSansPro" style="normal" weight="bold"/>
				</font>
				<font kerning="yes" embed-url="SourceSansPro-It.ttf">
					<font-triplet name="SourceSansPro" style="italic" weight="normal"/>
				</font>
				<font kerning="yes" embed-url="SourceSansPro-BoldIt.ttf">
					<font-triplet name="SourceSansPro" style="italic" weight="bold"/>
				</font>
				<!-- SourceSerifPro font -->
				<font kerning="yes" embed-url="SourceSerifPro-Regular.ttf">
						<font-triplet name="SourceSerifPro" style="normal" weight="normal"/>
					</font>
				<font kerning="yes" embed-url="SourceSerifPro-Bold.ttf">
					<font-triplet name="SourceSerifPro" style="normal" weight="bold"/>
				</font>
				<font kerning="yes" embed-url="SourceSerifPro-It.ttf">
					<font-triplet name="SourceSerifPro" style="italic" weight="normal"/>
				</font>
				<font kerning="yes" embed-url="SourceSerifPro-BoldIt.ttf">
					<font-triplet name="SourceSerifPro" style="italic" weight="bold"/>
